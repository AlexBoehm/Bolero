    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build",
            "program": "${workspaceFolder}/tests/server/bin/Debug/netcoreapp2.1/server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tests/server",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Remoting",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build",
            "program": "${workspaceFolder}/tests/Remoting.Server/bin/Debug/netcoreapp2.1/Remoting.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tests/Remoting.Server",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}